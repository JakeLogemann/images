{
	"name": "crates",
	"image": "ghcr.io/jakelogemann/devcontainer-rust:latest",
	"extensions": [
		"bungcip.better-toml",
		"github.codespaces",
		"github.github-vscode-theme",
		"github.vscode-pull-request-github",
		"matklad.rust-analyzer",
		"ms-vscode.cpptools",
		"vadimcn.vscode-lldb"
	],
	"remoteUser": "vscode",
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt=seccomp=unconfined"
	],
	"shutdownAction": "stopContainer"
}